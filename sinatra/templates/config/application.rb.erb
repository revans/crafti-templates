module <%= app_classname %>
  module Application
    extend self

    def root
      @root ||= ::Pathname.new(__dir__).join('..')
    end

    def public_dir
      root.join('public')
    end

    def config
      @config ||= ::EnvManager.load(root)
    end
  end
end

